<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idDoGasto"
        android:visibility="invisible"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp"
        android:layout_alignBaseline="@+id/txtGasto"
        android:layout_alignBottom="@+id/txtGasto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtDia"
        android:layout_alignBottom="@+id/txtDia"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_toStartOf="@+id/idDoGasto"
        android:layout_toLeftOf="@+id/idDoGasto"
        android:text="Gasto :"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/txtDia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Dia da semana :"
        android:textAlignment="viewStart" />
</RelativeLayout>